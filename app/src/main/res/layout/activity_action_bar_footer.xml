<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    tools:context="com.cdi.youpicity.layout.actionBarFooter"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="#cccccc">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#ffffff"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_gravity="center">
                <ImageButton
                    android:id="@+id/btn_Parcours"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:background="@drawable/ic_parcours_t"
                    android:textAlignment="center" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn_position"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:background="@drawable/ic_marker_t"
                    android:textAlignment="center" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:weightSum="1">
                <Button
                    android:id="@+id/btn_emergency"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:background="@drawable/ic_emergency_t"
                    android:textAlignment="center"
                    android:layout_weight="0.11" />
             </LinearLayout>



            <LinearLayout
                android:layout_width="104dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#ffffff"
                android:layout_gravity="center"
                android:weightSum="1">
                <ImageButton
                    android:id="@+id/btn_menu"
                    android:layout_width="60dp"
                    android:layout_height="47dp"
                    android:background="@drawable/ic_menu_t"
                    android:textAlignment="center"
                    android:layout_weight="0.11" />
            </LinearLayout>









        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
